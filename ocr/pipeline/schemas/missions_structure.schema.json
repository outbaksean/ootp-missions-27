{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "missions_structure",
  "type": "object",
  "required": ["version", "missions"],
  "properties": {
    "version": {"type": "string"},
    "missions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "type",
          "requiredCount",
          "reward",
          "category",
          "cards"
        ],
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "type": {"type": "string", "enum": ["count", "points", "missions"]},
          "requiredCount": {"type": "integer"},
          "reward": {"type": "string"},
          "category": {"type": "string"},
          "cards": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "cardId": {"type": "integer"},
                "points": {"type": "integer"}
              },
              "additionalProperties": true
            }
          },
          "missionIds": {
            "type": "array",
            "items": {"type": "integer"}
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
